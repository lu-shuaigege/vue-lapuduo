        { id: "2", name: "宝宝箱" },
        { id: "3", name: "商务合作" }
      ]
    };
  },
  methods: {
    lian: function() {
      if (
        this.chooseProduct != "" &&
        this.companyName != "" &&
        this.mail != "" &&
        this.name != "" &&
        this.phone != ""
      ) {
        this.$api.post(
          "api_addContact.do",
          {
            chooseProduct: this.chooseProduct,
            companyName: this.companyName,
            mail: this.mail,
            name: this.name,
            phone: this.phone
          },
          response => {
            if (response.status >= 200 && response.status < 300) {
              console.log(response.data); //请求成功，response为成功信息参数
            } else {
              console.log(response.message); //请求失败，response为失败信息
            }
          }
        );
      } else {
        alert("请把信息填写完整！");
      }

      this.isShow1 = false;
      this.isShow2 = true;
    },
    elsend: function() {
      this.isShow1 = true;
      this.isShow2 = false;
    }
  },
  components: {
