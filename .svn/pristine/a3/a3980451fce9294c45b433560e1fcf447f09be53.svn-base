<script>
import { removeToken } from "@/utils/cookie";
import { mapGetters } from "vuex";

export default {
  data() {
    return {
      headList: [
        //tab导航
        { text: "首页", path: "/home" },
        { text: "关于我们" },
        { text: "产品信息" },
        { text: "服务支持" },
        { text: "官方商城" },
        { text: "啦普哆俱乐部", path: "/club" },
        { text: "联系我们", path: "/contactUs" }
      ],
      selectNum: 0, //选中的tab下标
      showBrand: false, //控制遮罩层显隐的开关--关于我们
      showProduct: false, //控制遮罩层显隐的开关--产品信息
      showService: false, //控制遮罩层显隐的开关--服务支持
      showShop: false, //控制遮罩层显隐的开关--官方商城
      wordColcor: true //控制字体在页面显示黑白的
    };
  },
  mounted() {},
  watch: {
    $route: {
      handler(val) {
        //根据路由判断 哪些网页头部字体是黑色或者白色
        var linkName = [
          "privacyTerms",
          "socialTerms",
          "websiteTerms",
          "contactUs",
          "babybox"
        ];
        if (linkName.indexOf(val.name) > -1) {
          this.wordColcor = false;
        } else {
          this.wordColcor = true;
        }
        this.checkRouterLocal(val.path);
        this.showBrand = false;
        this.showProduct = false;
        this.showService = false;
        this.showShop = false;
      },
      deep: true,
      immediate: true
    }
  },
  methods: {
    selectTab(index, item) {
      this.selectNum = index;
      if (index == 1) {
        this.showBrand = !this.showBrand;
        this.showProduct = false;
        this.showService = false;
        this.showShop = false;
      } else if (index == 2) {
        this.showProduct = !this.showProduct;
        this.showBrand = false;
        this.showService = false;
        this.showShop = false;
      } else if (index == 3) {
        this.showService = !this.showService;
        this.showBrand = false;
        this.showProduct = false;
        this.showShop = false;
      } else if (index == 4) {
        this.showShop = !this.showShop;
        this.showBrand = false;
        this.showProduct = false;
        this.showService = false;
      } else {
        this.$router.push({
          path: item.path
        });
      }
    },
    checkRouterLocal(path) {
      //监听路由 根据路由下标高亮
      // 查找当前路由下标高亮
      this.selectNum = this.headList.findIndex(item => item.path === path);
    },
    toPart(item, index) {}
  },
  computed: {}
};
</script>

