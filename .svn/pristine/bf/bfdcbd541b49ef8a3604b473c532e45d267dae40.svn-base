<script>
import Footer from "../../components/commons/footer/footer.vue";
import {
  goAnchor,
  GetQueryString
} from "../../components/commons/header/anchor.js";
//引入分页组件
import pagination from "@/components/commons/pagination/pagination.vue";
export default {
  data() {
    return {
      total: 0, // 记录总条数
      display: 10, // 每页显示条数
      current: 1, // 当前的页数
      category: 1, //一级分类
      page: 1,
      content: []
    };
  },
  components: {
    Footer,
    //引入分页组件
    "v-pagination": pagination
  },
  created() {
    // this.category = this.$route.params.category;

    //从sessionStorage把页面要用的参数取出来
    this.category = sessionStorage.getItem("category");

    console.log(this.category);

    //判断有没有传过来一级分类的数据
    if (this.category != undefined) {
      console.log(this.category);
      this.pagination();
    } else if (this.category == undefined) {
      console.log(this.category);
      this.paginationa();
    }
  },
  methods: {
    hover: function() {
      console.log(this.category);
      if (this.category == 1) {
        this.$refs.category1.style.color = "#ffd050";
        this.$refs.category2.style.color = "#000000";
        this.$refs.category3.style.color = "#000000";
        this.$refs.category4.style.color = "#000000";
      }
      if (this.category == 2) {
        this.$refs.category1.style.color = "#000000";
        this.$refs.category2.style.color = "#ffd050";
        this.$refs.category3.style.color = "#000000";
        this.$refs.category4.style.color = "#000000";
      }
      if (this.category == 3) {
        this.$refs.category1.style.color = "#000000";
        this.$refs.category2.style.color = "#000000";
        this.$refs.category3.style.color = "#ffd050";
        this.$refs.category4.style.color = "#000000";
      }
      if (this.category == 4) {
        this.$refs.category1.style.color = "#000000";
        this.$refs.category2.style.color = "#000000";
        this.$refs.category3.style.color = "#000000";
        this.$refs.category4.style.color = "#ffd050";
      }
    },
    //分页组件向后台发送请求
    goAnchor,
    GetQueryString,
    pagechange: function(currentPage) {
      console.log(2222222);
      console.log(currentPage);
      this.page = currentPage;
      // ajax请求, 向后台发送 currentPage, 来获取对应的数据
      this.pagination();
    },
    //点击一级分类向后台获取不同的数据
    bbx: function(x) {
      this.category = x;
      //把页面要传的参数存到sessionStorage里面
      sessionStorage.setItem("category", this.category);
      this.pagination();
      this.hover();
    },
    xxwy: function(x) {
      this.category = x;
      //把页面要传的参数存到sessionStorage里面
      sessionStorage.setItem("category", this.category);
      this.pagination();
      this.hover();
    },
    txhl: function(x) {
      this.category = x;
      //把页面要传的参数存到sessionStorage里面
      sessionStorage.setItem("category", this.category);
      this.pagination();
      this.hover();
    },
    nxfs: function(x) {
      this.category = x;
      //把页面要传的参数存到sessionStorage里面
      sessionStorage.setItem("category", this.category);
      this.pagination();
      this.hover();
    },
    //axios请求
    pagination: function() {
      //查询条件
      //   var param = {
      //     page: page,
      //     pageSize: pageSize
      //     //其它查询条件可在下面添加
      //   };
      this.$api.post(
        "api_findGoodsList.do",
        {
          category: this.category,
          page: this.page,
          pageSize: 9
        },
        response => {
          if (response.status >= 200 && response.status < 300) {
            console.log(response.data); //请求成功，response为成功信息参数
            this.content = response.data.result.list;
            this.total = response.data.result.total;
          } else {
            console.log(response.message); //请求失败，response为失败信息
          }
        }
      );
    },
    paginationa: function() {
      //查询条件
      //   var param = {
      //     page: page,
      //     pageSize: pageSize
      //     //其它查询条件可在下面添加
      //   };
      this.$api.post(
        "api_findGoodsList.do",
        {
          category: 1,
          page: this.page,
          pageSize: 10
        },
        response => {
          if (response.status >= 200 && response.status < 300) {
            console.log(response.data); //请求成功，response为成功信息参数
            this.content = response.data.result.list;
          } else {
            console.log(response.message); //请求失败，response为失败信息
          }
        }
      );
    }
  },
  mounted() {
    this.hover();
  }
};
</script>
